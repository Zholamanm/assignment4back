<body>
<%- include('./partials/header') %>
<h1 class="text-center">Jordans</h1>
<div id="myCarousel" class="carousel slide mb-6 h-100" data-bs-ride="carousel" style="height: 500px !important;">
    <div class="carousel-inner h-100">
        <% for (let i = 0; i < sneakers.length && i < 5; i++) { %>
            <div class="carousel-item h-100 <%= i === 0 ? 'active' : '' %>">
                <img src="<%= sneakers[i].image %>" alt="" style="object-fit: contain" height="500" width="1500">
                <div class="container">
                    <div class="carousel-caption text-center bg-dark rounded-5 opacity-75">
                        <h1><%= sneakers[i].title %></h1>
                        <p class="opacity-75"><%= sneakers[i].base_price %> <%= sneakers[i].currency %></p>
                        <p><a class="btn btn-lg btn-primary" href="/api/sneakers/<%= sneakers[i].id %>/search">View</a></p>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<br>
